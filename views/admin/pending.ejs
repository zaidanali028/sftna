<%-include('../layouts/admin_header.ejs') %>
<div class="container-fluid">
  <%  if(PendinUserArray.length >= 1){ %>
    <div class="row">
        <%PendinUserArray.forEach(pendingUser=>{ %>
            <div class="col-sm-12">
                <div class="avatar  text-center mg">
                  <%if(pendingUser.pateronPicture){%>
                    <img
                    src="/uploads/<%=pendingUser.pateronPicture%>"
                    width="130px"
                    height="130px"
                    class="img-fluid rounded-circle z-depth-1 ml-5  "
                  />
                  <%  }else{%>
                    <p class="move">
                      No Picture Uploaded For This Pateron
                    </p>
                   <% } %>
                </div>

                <table class="table table-striped table-bordered table-responsive-md">
                    <thead>
                      <tr>
                        <th>Pateron's Name</th>
                        <th>Registeration Date</th>
                        <th>Why This Pateron Wants To Join Us</th>
            
                        <!-- <th scope="col">Amount</th> -->
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                          <td><%=pendingUser.pateronName%></td>
                          <td><%=pendingUser.pateronSince%></td>
                          <td><%=pendingUser.pateronReason%></td>
                          <td>
                              <form action="/admin/accept/pending/<%=pendingUser.pateronId%>?_method=PUT" method="POST"">
                            <button type="submit" class="btn btn-success"
                            onclick=""> <i class="fas fa-exclamation-triangle mr-2"> </i>Accept Request</button>
                        </form></td>
                          <td>
                            <form action="/admin/delete/pending/<%=pendingUser.pateronId%>?_method=DELETE" method="POST"">
                                <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are You Sure You Want To Delete This  Pateron?')"> <i class="fas fa-exclamation-triangle mr-2"> </i>Decline Request</button>
                            </form>
                          </button></td>

                      </tr>
                      </tbody>
                      </table>

     <%   })%>

    <div class="container pt-5 my-5 z-depth-1">
    <section class="p-md-3 mx-md-5">
      <div class="row d-flex justify-content-center">
        <div class="col-md-6 text-center pink-text">
          <h2 class="font-weight-bold pb-4">Approve/Disapprove Paterons</h2>
          <i class="fas fa-user-check fa-6x mb-2"></i>
          <p class="grey-text pt-4">
            Approve Or Disapprove Paterons Here,Simply Check The Pateron's Reason To Join Us And If It Meets Our Criteria,Approve His Pending Request,Or Do Otherwise If You Think He/She Doesn't
          </p>
        </div>
      </div>
      <hr class="mx-5">
      
    </section>
  </div>
    </div>

 <% }else{%>
    <div class="container pt-5 my-5 z-depth-1">
        <section class="p-md-3 mx-md-5">
          <div class="row d-flex justify-content-center">
            <div class="col-md-6 text-center pink-text">
              <h2 class="font-weight-bold pb-4">Woow,You Completed Your Work! No Pending Paterons Are Awaiting Approvals</h2>
              <i class="far fa-gem fa-6x mb-2"></i>
              <p class="grey-text pt-4">
                Simply Get Some Time Off,Relax And Comeback Later For New SFTNA MEMBERS,CHEESE!
              </p>
            </div>
          </div>
          <hr class="mx-5">
          
        </section>
      </div>
      <br>
      <br>
      <br>
      <br>
      <br>
      <br>


 <%} %>
 
</div>


<%-include('../layouts/admin_footer.ejs') %>
